<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#009691"
    app:cardUseCompatPadding="true"
    app:cardElevation="6.50dp">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/obserImageIv"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="@color/white" />

        <TextView
            android:id="@+id/obserNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/obserImageIv"
            android:text="Observation Name"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/deleteObserIbtn"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="9dp"
            android:background="@color/red"
            app:srcCompat="@drawable/baseline_delete_24" />

        <ImageButton
            android:id="@+id/editObserIbtn"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="9dp"
            android:background="@color/blue"
            app:srcCompat="@drawable/baseline_mode_edit_outline_24" />

        <ImageButton
            android:id="@+id/viewObserIbtn"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="89dp"
            android:layout_marginBottom="9dp"
            android:background="@color/green"
            app:srcCompat="@drawable/baseline_view_eye" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>