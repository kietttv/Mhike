<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    app:cardUseCompatPadding="true"
    app:cardElevation="6.50dp">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/searchFriendImageIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="23dp"
            android:src="@drawable/avatar_background"
            app:civ_border_color="@color/white" />


        <TextView
            android:id="@+id/searchFriendEmailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/searchFriendImageIv"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/searchFriendNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="48dp"
            android:layout_toEndOf="@+id/searchFriendImageIv"
            android:text="Name"
            android:textColor="#5A5A5A"
            android:textSize="14dp" />

        <Button
            android:id="@+id/addFriendBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:text="Add"
            android:background="#FFFFFF"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>